@model OrderDetail
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form id="editDetailForm" action="~/Order/UpdateDetail" method="post" class="form-horizontal">
            <input type="hidden" name="@nameof(Model.OrderID)" value="@Model.OrderID" />
            <input type="hidden" name="@nameof(Model.ProductID)" value="@Model.ProductID" />
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật chi tiết đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label col-sm-3">Tên mặt hàng:</label>
                    <div class="col-sm-9">
                        <p class="form-control-static" name="@nameof(Model.ProductName)" value="@Model.ProductName">@Model.ProductName</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Đơn vị tính:</label>
                    <div class="col-sm-9">
                        <p class="form-control-static" name="@nameof(Model.Unit)" value="@Model.Unit">@Model.Unit</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Số lượng:</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control" min="1" name="@nameof(Model.Quantity)" value="@Model.Quantity" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Giá bán:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control number-separator" name="@nameof(Model.SalePrice)" value="@Model.SalePrice" />
                        <span id="error-message-salePrice" style="color: red; display: none" class="error">Giá bán không hợp lệ</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.9/jquery.inputmask.min.js"></script>
<script>
    $('.number-separator').inputmask({
        alias: "numeric",
        groupSeparator: ",",       // Dấu phẩy phân cách phần nghìn
        autoGroup: true,           // Tự động thêm dấu phân cách
        digits: 0,                 // Không có chữ số thập phân
        removeMaskOnSubmit: true   // Loại bỏ ký tự phân cách phần nghìn khi submit form
    });
</script>
<script>
    $(document).ready(function () {
        $('.form-control.number-separator').css('text-align', 'left');
    });
</script>