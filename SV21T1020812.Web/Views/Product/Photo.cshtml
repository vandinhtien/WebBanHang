@model ProductPhoto
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" enctype="multipart/form-data" action="~/Product/SavePhoto" method="post">

            <input type="hidden" name="@nameof(Model.PhotoID)" value="@Model.PhotoID"  />

            <input type="hidden" name="@nameof(Model.ProductID)" value="@Model.ProductID"  />

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/products/@(string.IsNullOrWhiteSpace(Model.Photo)?"no_product.png":Model.Photo)" class="img img-responsive img-bordered" style="width:200px" />
                    @Html.ValidationMessage(nameof(Model.Photo))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.Description)"
                           value="@Model.Description" />
                    @Html.ValidationMessage(nameof(Model.Description))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="@nameof(Model.DisplayOrder)"
                           value="@Model.DisplayOrder" />
                    @Html.ValidationMessage(nameof(Model.DisplayOrder))
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <label><input type="checkbox" value="true" name="@nameof(Model.IsHidden)" @(Model.IsHidden ? "checked" : "")>Không hiển thị ảnh</label>
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Product/Edit/@Model.ProductID" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>