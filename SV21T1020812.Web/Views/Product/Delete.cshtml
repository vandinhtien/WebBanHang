@model Product
@{
    ViewBag.Title = "Xóa mặt hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="#" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.ProductName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.ProductDescription</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Unit</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Price</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/products/@(string.IsNullOrWhiteSpace(Model.Photo)?"no_product.png":Model.Photo)" class="img img-responsive img-bordered" style="width:150px" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (!SV21T1020742.BusinessLayers.ProductDataService.InUsedProduct(Model.ProductID))
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            Xác nhận xóa
                        </button>
                    }
                    <a href="/Product" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
