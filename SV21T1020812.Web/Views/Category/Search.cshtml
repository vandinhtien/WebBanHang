@model SV21T1020742.Web.Models.CategorySearchResult
@{
	Layout = null;
}
<!--hiển thị kết quả-->
<p class="mt-1">
	có <b>@Model.RowCount</b> loại hàng trong tổng số <b>@Model.PageCount</b> trang
</p>
<div class="table-responsive">
	<table class="table table-bordered table-hover table-striped">
		<thead>
			<tr class="bg-primary">
				<th>Tên loại hàng</th>
				<th>Mô tả</th>
				<th style="width:80px"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Data)
			{
				<tr>
					<td>@item.CategoryName</td>
					<td>@item.Description</td>
					<td class="text-right">
						<a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
							<i class="fa fa-edit"></i>
						</a>
						<a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
							<i class="fa fa-trash"></i>
						</a>
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>
<div class="text-center">
	<ul class="pagination text-center">
		@for (int p = 1; p <= Model.PageCount; p++)
		{
			if (p == Model.Page)
			{
				<li class="active"><a href="#">@p</a></li>
			}
			else
			{
				<li><a href="javascript:;" onclick="doSearch(@p)">@p</a></li>
			}
		}
	</ul>
</div>