@model Customer
@{
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="@nameof(Model.CustomerId)" value="@Model.CustomerId" />
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.CustomerName)"
                       value="@Model.CustomerName"
                       autofocus>
                       @Html.ValidationMessage(nameof(Model.CustomerName))
            </div>
            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.ContactName)"
                       value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName))
            </div>
            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Phone)"
                       value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control"
                       name="@nameof(Model.Email)"
                       value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email))
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Address)"
                       value="@Model.Address">
                @Html.ValidationMessage(nameof(Model.Address))
            </div>
            <div class="form-group">
                <label>Tỉnh/thành:</label>
                <select name="@nameof(Model.Province)" class="form-control select2">
                    <option value="">--chọn tỉnh/thành--</option>
                    @foreach (var item in SV21T1020742.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }


                </select>
                @Html.ValidationMessage(nameof(Model.Province))
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="@nameof(Model.IsLocked)"
                           value="true" @(Model.IsLocked?"checked":"")> Tài khoản đang bị khóa
                </label>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>
